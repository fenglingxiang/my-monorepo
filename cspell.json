				"describe",
				"it",
				"test",
				"expect",
				"jest",
				"vitest",
				"mocha",
				"chai",
				"sinon",
				"cypress"
			]
		},
		{
			"filename": "**/docs/**/*.md",
			"languageSettings": [
				{
					"languageId": "markdown"
				}
			]
		},
		{
			"filename": "**/i18n/**/*.json",
			"languageSettings": [
				{
					"languageId": "json"
				}
			]
		}
	]
