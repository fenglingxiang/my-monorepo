		"/\\*.*\\*/",
		"//.*",
		"\".*\"",
		"'.*'",
		"`.*`",
		"/\\^.*?\\^/",
		"\\$\\{.*?\\}"
	],
	"useGitignore": true,
	"gitignoreRoot": ".",
	"noConfigSearch": true,
	"maxNumberOfProblems": 1000,
	"minWordLength": 1,
	"numSuggestions": 5,
	"overrides": [
		{
			"filename": "**/*.vue",
			"languageSettings": [
				{
					"languageId": "vue,vue-html"
				}
			]
		},
		{
			"filename": "**/*.test.{js,ts,jsx,tsx}",
